<div class="container">
    <h1 class="text-center">Eat Da Burger</h1>
    <div class="row">
        <div class="col">
            <div class="col-3 text-center mx-auto">
                <div class="card">
                    <form class="create-form">
                        <div class="form-group">
                            <label for="burg">Add Burger Order:</label>
                            <input type="text" id="burg" name="name">
                        </div>
                        <button type="submit">ORDER IN</button>
                    </form>
                </div>
            </div>
            <div class="col-3 text-center mx-auto">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-3 text-center mx-auto">
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>